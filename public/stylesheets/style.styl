@font-face {
	font-family: 'coolvetica';
	src: url('coolvetica.ttf') format('truetype');
}

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

body
	/* background url('../images/background.jpg') repeat */
	/* background url('../images/tile-back.gif') repeat */
	background #F1F1E9
	color #111111
	font-family Arial, Verdana, sans-serif
	font-size 62.5%

/* Document Layout */

p
	font-size 1.200em
	line-height 1.600em

h1, h2, h3, h4, h5
	margin 0

h1
	font-size 2.667em /* 32px */
h2
	font-size 2.333em /* 28px */
h3
	font-size 2.000em /* 24px */
h4
	font-size 1.500em /* 18px */
h5
	font-size 1.333em /* 16px */

a, avisited
	color #00B7FF
	/* color #455863 */
	text-decoration none

pre
	margin 0

input, select, th, td
	font-size 1.000em

/* End Document Layout */

/* Document ID's */

#header
	height 75px
	margin-bottom 25px
	margin-top 25px

#navigation
	margin-bottom 25px

	ul
		font-size 1.400em
		list-style-type none
		margin 15px 15px 15px 0
		padding 15px 15px 15px 0
		text-align center
		li
			float left
			margin-right 2px
		li.no-margin
			margin 0

#introduction
	margin-bottom 20px
	margin-top 25px

#featured-posts
	margin-bottom 25px

	h3
		color #00B7FF
		font-family 'coolvetica'
		letter-spacing 1px
		margin-bottom 5px

	#featured-content
		border 1px dotted #BBBBBB
		height 100px
		padding 10px

		h5
			font-family 'coolvetica'
			letter-spacing 1px
			
			text-shadow: 1px 1px 1px #ffffff;
			filter: dropshadow(color=#ffffff, offx=1, offy=1); 
		
		p
			text-shadow: 1px 1px 1px #ffffff;
			filter: dropshadow(color=#ffffff, offx=1, offy=1); 

	#featured-navigation
		margin-left 10px
		margin-top 5px

#body
	margin-bottom 15px
	
	#post-header
		p
			font-weight bold
			margin 0
			padding-bottom 5px

	#user-header
		p
			font-weight bold
			margin 0
			padding-bottom 5px

	#post-column
		h5
			color #00B7FF
		#post
			border-top 1px dotted #BBBBBB
			padding-top 5px

		#meta-content
			ul
				font-size 1.000em
				list-style-type none
				margin 0 0 1em
				padding 0

				li
					border-bottom 1px dotted #BBBBBB
					padding 5px 0 5px 0

		#post-content
			
			#title
				margin-bottom 1em
				margin-top 1em

				h5
					font-family 'coolvetica'
					letter-spacing 1px

			#body
				background white
				border 1px solid #DDDDDD
				padding 10px

				border-radius 5px

			p
				margin-top 0
				text-align justify
	
	#user-column
		#user
			border-top 1px solid #BBBBBB

			ul
				font-size 1.200em
				list-style-type none
				margin 0 0 1em
				padding 0 0 5px 0
				li
					padding 2px 0 2px 0

		#twitter
			#twitter-header
	
				p
					font-weight bold
					margin 0
					padding-bottom 5px

				#tweets
					p
						font-weight normal

	#about-title
		h1
			color #00B7FF
			font-family 'coolvetica'
			letter-spacing 1px
			margin-bottom 10px

			text-shadow: 1px 1px 1px #F2F2F2;
			filter: dropshadow(color=#F2F2F2, offx=1, offy=1); 
		h3
			margin-bottom 25px

	#about-left
		#success
			border-radius 10px
			
			-webkit-box-shadow: 0px 2px 2px 2px #404040;
			-moz-box-shadow: 0px 2px 2px 2px #404040;
			box-shadow: 0px 2px 2px 2px #404040;
		
	#about-right
		h3
			color #00B7FF
			font-family 'coolvetica'
			letter-spacing 1px
			margin-top 0px

			text-shadow: 1px 1px 1px #F2F2F2;
			filter: dropshadow(color=#F2F2F2, offx=1, offy=1); 

#register-form
	margin-top 100px

	#register-box
		background #DADADA
		border-top 2px solid #DDDDDD
		padding 25px 15px 15px 15px
		width 335px

		border-radius 5px

		-webkit-box-shadow: 0px 2px 2px 2px #C0C0C0;
		-moz-box-shadow: 0px 2px 2px 2px #C0C0C0;
		box-shadow: 0px 2px 2px 2px #C0C0C0;

		#errors
			font-size 1.200em
			list-style-type none
			padding 0

			li
				background none repeat scroll 0 0 #FBE3E4
				border 1px solid #FBC2C4 
				color #D12F19
				height 19px
				line-height 19px
				margin-bottom 19px
				padding 10px

	#register
		img
			margin-bottom 15px
		form
			label
				display block
				margin-bottom 10px
				font-size 2.000em

			input
				border 1px solid #455683
				height 30px
				font-size 1.500em
				margin-bottom 10px
				padding 5px
				text-align center
				text-transform uppercase
				width 272px

				border-radius 2px
			input.button
				background url('../images/form-register-button.gif') no-repeat
				border none
				cursor pointer
				width 78px

		p
			margin 0
		
		p
			a
				color #455863

#login-form
	margin-top 100px

	#login-box
		background #DADADA
		border-top 2px solid #DDDDDD
		padding 25px 15px 15px 15px
		width 335px

		border-radius 5px

		-webkit-box-shadow: 0px 2px 2px 2px #C0C0C0;
		-moz-box-shadow: 0px 2px 2px 2px #C0C0C0;
		box-shadow: 0px 2px 2px 2px #C0C0C0;

		p
			a
				color #455863
	
	#login-with-password
		img
			margin-bottom 15px

		form
			input
				border 1px solid #455683
				height 30px
				font-size 1.500em
				margin-bottom 10px
				padding 5px
				text-align center
				text-transform uppercase
				width 272px

				border-radius 2px

			input.button
				background url('../images/form-login-button.gif') no-repeat
				border none
				cursor pointer
				width 78px

		p
			margin 0

#footer
	border-top 1px solid #333333

/* End Document ID's */

/* Universal Classes */

.bot-margin-none
	margin-bottom 0

.heavy
	font-weight bold

.italicize
	font-style italic

.larger-font
	font-size 1.400em
	margin-top 15px

/* End Universial Classes */