html(lang="en")
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/grid.css ')
		link(rel='stylesheet', href='/stylesheets/jquery.tweet.css')

		block scripts
			script(src='http://code.jquery.com/jquery-1.7.min.js')
			script(src='/javascripts/featured-content.js')
			script(src='/javascripts/jquery.tweet.js')
			script
				$(document).ready(function(){

					// Twitter Widget
					jQuery(function($) {
						$("#tweets").tweet({
							username: "sfttwit",
							join_text: "auto",
							avatar_size: 32,
							count: 4	
						});
					});

					// Login Form Behavior
					// Username
					$("#login-with-password input[name='username']:text").focusin(function() {
						$(this).val("");
					}).focusout(function() {
						$(this).val("USERNAME");
					});

					// Password
					$("#login-with-password input[name='password']:password").focusin(function() {
						$(this).val("");
					}).focusout(function() {
						$(this).val("password");
					});

					// Register Form Behavior
					// Username
					$("#register #username input:text").focusin(function() {
						$(this).val("");
					}).focusout(function() {
						$(this).val("username");
					});

					// Password
					$("#register #password input:password").focusin(function() {
						$(this).val("");
					}).focusout(function() {
						$(this).val("password");
					});
				});
				
	body!= body