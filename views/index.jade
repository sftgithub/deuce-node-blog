div.container_12

	div#header.grid_12!=partial('includes/header.jade')
	div.clear

	div#introduction.grid_12
		h1 User Management and Blogging with 
			a(href='http://www.nodejs.org', target='_blank') node.js
	div.clear

	div#featured-posts.grid_8
		h3 Featured Content
		div#featured-content
			each post, i in posts
				if post.categories == 'featured'
					div(class = 'featured-' + (i + 1))
						h5= post.title
						p= post.body
		div#featured-navigation
			a.previous(href='') previous 
			\| 
			a.next(href='') next
	div.clear

	div#body
		div#post-header.grid_6.prefix_2
			p Recent Entries
		div#user-header.grid_4
			p Users Currently Online
		div.clear

		div#post-column.grid_8
			each post, i in posts
				div#post
					div#meta-content.grid_2.alpha
						ul
							li #{post.date_created}
							li In #{post.categories}
							li 15 Comments
					div#post-content.grid_6.omega
						div#title
							h5 
								a(href='/post/#{post._id}') #{post.title}
						div#body
							p #{post.body}
					div.clear

		div#user-column.grid_4
			div#user
				ul
					li
						span.heavy Name: 
					li
						span.heavy Username: 
					li 
						span.heavy Email: 
			div#twitter
				div#twitter-header
					p Twitter Updates from admin
					div#tweets
		div.clear

	div#footer.grid_12!=partial('includes/footer.jade')
	div.clear